server {

        listen 80 default_server;
        #listen [::]:80 default_server;

        # SSL configuration
        #
        # Self signed certs generated by the ssl-cert package
        # Don't use them in a production server!
        #
        listen 443 ssl;
        #listen [::]:443 ssl;

        root /var/www/default;

        # Add index.php to the list if you are using PHP
        index index.html index.htm;

        server_name _;

        location / {
                # First attempt to serve request as file, then
                # as directory, then fall back to displaying a 404.
                try_files $uri $uri/ =404;
        }


        location ^~ /digiradio-v/ {
            # Any queory with /digiradio-v/, stop searching
            rewrite    /digiradio-v/(.*) /$1 break;
            rewrite    /digiradio-v/ / break;
            proxy_pass http://digiradio-v:8080;
            proxy_connect_timeout 5s;
            proxy_http_version 1.1;
            proxy_set_header Upgrade $http_upgrade;
            proxy_set_header Connection "upgrade"; 
        }
        
        include /etc/nginx/acme-catch-location;
        include /etc/nginx/default-listen-ssl;
        ssl_certificate /etc/letsencrypt/self-signed.crt; # managed by Certbot
        ssl_certificate_key /etc/letsencrypt/self-signed.pem; # managed by Certbot

}
